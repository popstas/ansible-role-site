;{{ ansible_managed }}

[{{ item.name }}]

{% for directive, value in ((site_php_fpm_defaults|default(dict())).items() + item.items() + (site_php_fpm_extras|default(dict())).items()) if directive != "name" %}
{% if value is mapping -%}
{% for key, value2 in value.iteritems() %}
{{ directive }}[{{ key }}] = {{ value2 }}
{% endfor %}
{% else %}
{{ directive }} = {{ value }}
{% endif %}
{% endfor %}
{% if site_ssl %}env[HTTPS] = on{% endif %}
