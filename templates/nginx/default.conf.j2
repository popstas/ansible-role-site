# {{ ansible_managed }}
server {
  # Redirect to main domain
  listen 80;
  server_name {{ site_domains_redirected_compiled | join(' ') }};
  return 301 $scheme://{{ site_domain }}$request_uri;
}

server {
  listen 80;
  server_name {{ site_domain }} {{ site_domains_secondary | join(' ') }};
  root {{ site_root }};
  index index.php;

  location / {
    # site_nginx_location_static_files
    {{ site_nginx_location_static_files | indent(4) }}

    # site_nginx_location_php
    {{ site_nginx_location_php | indent(4) }}

    # site_nginx_custom_root_location
    {{ site_nginx_custom_root_location | default('') | indent(2) }}

    try_files $uri @rewrite;
  }

  # site_nginx_location_rewrite
  {{ site_nginx_location_rewrite | indent(2) }}

  # site_nginx_location_default
  {{ site_nginx_location_default | indent(2) }}

  # site_nginx_custom_server
  {{ site_nginx_custom_server | default('') | indent(2) }}
}
