# {{ ansible_managed }}
server {
    # Redirect from www
    listen 80;
    server_name {{ item.value.server_name }} {{ item.value.server_aliases | default('') }} www.{{ item.value.server_name }};
    return 301 $scheme://{{ site_domain }}$request_uri;
}

server {
  listen 443 ssl http2;
  server_name {{ item.value.server_name }} {{ item.value.server_aliases | default('') }};
  root {{ site_root }};
  index index.php;

  ssl_certificate {{ item.value.ssl_certificate | default('/etc/letsencrypt/live/{{ item.value.server_name }}/fullchain.pem') }};
  ssl_certificate_key {{ item.value.ssl_certificate | default('/etc/letsencrypt/live/{{ item.value.server_name }}/privkey.pem') }};
  ssl_dhparam {{ item.value.ssl_dhparam | default('/etc/ssl/certs/dhparam.pem') }};
  add_header Strict-Transport-Security "max-age=15768000"; # HSTS

  location / {
    {{ site_nginx_location_static_files | indent(4) }}

    {{ site_nginx_location_php | indent(4) }}

    {{ item.value.root_location_extra_parameters | default('') | indent(2) }}

    try_files $uri @rewrite;
  }

  {{ site_nginx_location_rewrite | indent(2) }}

  {{ site_nginx_location_default | indent(2) }}

  {{ item.value.server_extra_parameters | default('') | indent(2) }}
}
